#:kivy 2.1

<OffprocessSidebarIconButton@MDIconButton>:
    icon_size: '20sp'

<OffprocessSidebar>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 95

            MDBoxLayout:
                id: bar
                orientation: 'horizontal'
                padding: dp(5)
                adaptive_height: True

                OffprocessSidebarIconButton:
                    icon: 'circle-outline'

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                ScrollableTreeView:
                    id: audio_treeview
                    root_options: {'text': 'target audio data', 'font_size': '15sp'}

        Button:
            size_hint_x: 5
            text: 'â–·'
            font_size: '15sp'
            on_press: root.select_button_clicked()

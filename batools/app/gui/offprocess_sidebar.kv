#:kivy 2.1

<OffprocessSidebarIconButton@MDIconButton>:
    icon_size: '20sp'

<OffprocessSidebarIconSeparator@MDLabel>:
    text: '|'
    font_size: '25sp'
    theme_text_color: 'Secondary'

<OffprocessSidebar>:
    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 95

            ScrollView:
                do_scroll_y: False
                height: dp(54)
                size_hint_y: None

                MDBoxLayout:
                    id: bar
                    orientation: 'horizontal'
                    padding: dp(5)
                    adaptive_width: True

                    OffprocessSidebarIconButton:
                        icon: 'file-remove-outline'
                        on_press: root.remove_button_clicked(select=True)

                    OffprocessSidebarIconButton:
                        icon: 'delete-forever-outline'
                        on_press: root.remove_button_clicked(select=False)

                    OffprocessSidebarIconSeparator:

                    OffprocessSidebarIconButton:
                        icon: 'sort-ascending'
                        on_press: root.sort_button_clicked(value='duration', button=self)

                    OffprocessSidebarIconButton:
                        icon: 'sort-alphabetical-ascending'
                        on_press: root.sort_button_clicked(value='label', button=self)

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                ScrollableTreeView:
                    id: audio_treeview
                    root_options: {'text': 'target audio data', 'font_size': '15sp'}

        Button:
            size_hint_x: 5
            text: 'â–·'
            font_size: '15sp'
            on_press: root.select_button_clicked()

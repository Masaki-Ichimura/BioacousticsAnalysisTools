#:kivy 2.1

<ConfigDrawerItem@MDNavigationDrawerItem>:
  icon_color: app.theme_cls.text_color
  theme_text_color: 'Custom'
  text_color: app.theme_cls.text_color
  selected_color: app.theme_cls.secondary_text_color

<ConfigOptionTextField@MDTextField>:
  font_size: '15sp'
  size_hint_x: None
  width: dp(200)
  mode: 'line'
  halign: 'center'
  multiline: False
  text_color_normal: app.theme_cls.text_color
  line_color_normal: app.theme_cls.text_color
  disabled_foreground_color: app.theme_cls.secondary_text_color

<ConfigCheckbox@MDCheckbox>:
  size: dp(48), dp(48)
  size_hint: None, None

<ConfigOptionLabel@MDLabel>:
  halign: 'left'

<ConfigWorkingContainer>:
  MDNavigationLayout:
    pos: root.pos
    size: root.size

    ScreenManager:
      id: screen_manager

      MDScreen:
        name: 'general'

        ScrollView:
          do_scroll: False

          MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(15), dp(5)]
            adaptive_height: True

            MDBoxLayout:
              adaptive_height: True

              ConfigOptionLabel:
                font_style: 'H6'
                text: '通知(試験機能)'

            MDBoxLayout:
              orientation: 'horizontal'
              padding: [dp(50), dp(5)]
              adaptive_height: True

              ConfigCheckbox:
                id: separate_notify

              ConfigOptionLabel:
                text: '音源分離完了時'

      MDScreen:
        name: 'spec'

        MDBoxLayout:
          orientation: 'vertical'
          md_bg_color: app.theme_cls.bg_light

          Button:
            text: '- スペクトログラム描画時の設定'

      MDScreen:
        name: 'stft'

        ScrollView:
          do_scroll: False

          MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(15), dp(5)]
            adaptive_height: True

            MDBoxLayout:
              adaptive_height: True

              ConfigOptionLabel:
                font_style: 'H6'
                text: '窓幅'

            MDBoxLayout:
              orientation: 'horizontal'
              padding: [dp(50), dp(5), dp(150), dp(5)]
              adaptive_height: True

              ConfigOptionLabel:
                text: 'デフォルト：1024(pt)'

              ConfigOptionTextField:
                id: stft_n_fft
                text: '1024'

            MDBoxLayout:
              adaptive_height: True

              ConfigOptionLabel:
                font_style: 'H6'
                text: 'シフト幅'

            MDBoxLayout:
              orientation: 'horizontal'
              padding: [dp(50), dp(5), dp(150), dp(5)]
              adaptive_height: True

              ConfigOptionLabel:
                text: 'デフォルト：256(pt)'

              ConfigOptionTextField:
                id: stft_hop_length
                text: '256'

            MDBoxLayout:
              adaptive_height: True

              ConfigOptionLabel:
                font_style: 'H6'
                text: '窓関数'

            MDBoxLayout:
              orientation: 'horizontal'
              padding: [dp(50), dp(5), dp(150), dp(5)]
              adaptive_height: True

              ConfigOptionLabel:
                text: 'デフォルト：hann'

              ConfigOptionTextField:
                id: stft_window
                text: 'hann'
                on_focus: if self.focus: root.stft_window_menu.open()

    MDNavigationDrawer:
      id: nav_drawer
      type: 'standard'
      width: root.width*.25

      MDNavigationDrawerMenu:

        ConfigDrawerItem:
          icon: 'cog-outline'
          text: '全般'
          on_press:
            screen_manager.current = 'general'

        ConfigDrawerItem:
          icon: 'cog-outline'
          text: 'スペクトログラム'
          on_press:
            screen_manager.current = 'spec'

        ConfigDrawerItem:
          icon: 'cog-outline'
          text: 'STFT'
          on_press:
            screen_manager.current = 'stft'

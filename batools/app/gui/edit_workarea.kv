#:kivy 2.1

<EditWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size

        EditAudioDisplay:
            id: audio_display
            size_hint_y: 2

        EditAudioDetail:
            id: audio_detail
            size_hint_y: 3

<EditAudioDisplay>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size

        AudioToolbar:
            id: audio_toolbar
            size_hint_y: None

        HSeparator:
            rgba: 0.5, 0.5, 0.5, 1

        AudioTimeline:
            id: audio_timeline

        HSeparator:
            height: dp(2)

<EditAudioDetail>:
    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        MDTabs:
            id: tabs
            tab_bar_height: dp(54)
            background_color: (1, 1, 1, .2)

            PreprocessedTab:
                id: preprocessed

            SilenceRemovalTab:
                id: silence_removal

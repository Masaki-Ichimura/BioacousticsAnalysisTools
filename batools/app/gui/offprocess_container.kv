<OffprocessContainer>:
    MDBoxLayout:
        orientation: 'horizontal'
        size: root.size
        md_bg_color: app.theme_cls.bg_light

        OffprocessSidebar:
            id: sidebar
            size_hint_x: 25

        OffprocessWorkingContainer:
            id: working_container
            size_hint_x: 75

<OffprocessWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        OffprocessAudioDisplay:
            id: audio_display
            size_hint_y: 40

        OffprocessAudioDetail:
            id: audio_detail
            size_hint_y: 60

<OffprocessAudioDisplay>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        AudioToolbar:
            id: audio_toolbar
            size_hint_y: None

        HSeparator:
            rgba: 0.5, 0.5, 0.5, 1

        AudioTimeline:
            id: audio_timeline

        HSeparator:
            height: dp(2)

<OffprocessAudioDetail>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size
        pos: root.pos

        MDTabs:
            background_color: (1, 1, 1, .2)
            tab_bar_height: dp(54)

            TargetTab:
                id: target

            GeneralTab:
                id: general

            FrogTab:
                id: frog

#:kivy 2.1

#:import NoTransition kivy.uix.screenmanager.NoTransition


<SilenceRemovalOptionTextField@MDTextField>
    font_size: '15sp'
    mode: 'rectangle'
    multiline: False
    helper_text_mode: 'persistent'
    text_color_normal: app.theme_cls.text_color
    line_color_normal: app.theme_cls.text_color
    disabled_foreground_color: app.theme_cls.secondary_text_color

<Mode@MDCheckbox>:
    group: 'silence_removal_mode'
    size_hint: None, None
    size: dp(48), dp(48)


<SilenceRemovalTab>:
    title: '無音区間除去'

    MDBoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        StackLayout:
            id: options
            orientation: 'lr-tb'
            padding: 30
            size_hint_x: 70

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 20
                padding: [0, 0, 0, 30]
                size_hint_x: None
                width: options.width
                adaptive_height: True

                MDIcon:
                    icon: 'cog-outline'
                    font_size: '20sp'

                MDLabel:
                    font_style: 'H5'
                    text: 'Settings'

            ScrollView:
                id: scrollview
                do_scroll_x: False
                padding: [30, 0, 30, 0]

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: [30, 0, 30, 0]
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: 40
                        padding: [0, 30, 0, 30]
                        adaptive_height: True

                        MDLabel:
                            font_style: 'H6'
                            text: 'Label name'

                        StackLayout:
                            orientation: 'lr-tb'
                            padding: [30, 0, 30, 0]
                            size_hint_y: None
                            height: 120

                            SilenceRemovalOptionTextField:
                                id: label
                                text: ''
                                hint_text: 'label to identify each extracted signals.'
                                helper_text: 'default: original wav file name'


                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True

                        MDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_height: True

                            MDLabel:
                                font_style: 'H6'
                                text: 'Frequency Filter'

                            MDSwitch:
                                id: limit_freq
                                on_active:
                                    freq_high.disabled = not self.active
                                    freq_low.disabled = not self.active

                            # spacer widget
                            Widget:
                                width: 20
                                size_hint_x: None

                        StackLayout:
                            orientation: 'lr-tb'
                            padding: [30, 0, 30, 0]
                            spacing: 40
                            size_hint_y: None
                            height: dp(200)

                            SilenceRemovalOptionTextField:
                                id: freq_high
                                disabled: not limit_freq.active
                                text: '4096'
                                hint_text: 'highest frequency that can be used (Hz).'
                                helper_text: 'default: 4,096 (Hz)'

                            SilenceRemovalOptionTextField:
                                id: freq_low
                                disabled: not limit_freq.active
                                text: '1024'
                                hint_text: 'lowest frequency that can be used (Hz).'
                                helper_text: 'default: 1,024 (Hz)'

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True

                        MDLabel:
                            font_style: 'H6'
                            text: 'Mode'

                        MDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_height: True

                            MDLabel:
                                font_style: 'Subtitle1'
                                text: '[ref=btn]SVM threshold'
                                markup: True
                                on_ref_press:
                                    svm_checkbox.active = True

                            Mode:
                                id: svm_checkbox
                                active: True
                                on_active:
                                    screen_manager.current = 'svm_thr'
                                    root.mode = 'svm'

                            MDLabel:
                                font_style: 'Subtitle1'
                                text: '[ref=btn]RMS threshold'
                                markup: True
                                on_ref_press:
                                    rms_checkbox.active = True

                            Mode:
                                id: rms_checkbox
                                on_active:
                                    screen_manager.current = 'rms_thr'
                                    root.mode = 'rms'

                    BoxLayout:
                        id: mode
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 1000

                        ScreenManager:
                            id: screen_manager
                            transition: NoTransition()

                            MDScreen:
                                name: 'rms_thr'

                                StackLayout:
                                    orientation: 'lr-tb'
                                    padding: [30, 0, 30, 0]
                                    spacing: 40

                                    SilenceRemovalOptionTextField:
                                        id: rms_min_silence
                                        text: '1000'
                                        hint_text: 'minimum length for silent sections in ms.'
                                        helper_text: 'default: 1,000 (ms)'

                                    SilenceRemovalOptionTextField:
                                        id: rms_threshold
                                        text: '-16'
                                        hint_text: 'the upper bound for how quiet is silent in dBFS.'
                                        helper_text: 'default: -16 (dB)'

                                    SilenceRemovalOptionTextField:
                                        id: rms_seek
                                        text: '100'
                                        hint_text: '1 Size of the step for checking for silence in ms.'
                                        helper_text: 'default: 100 (ms)'

                            MDScreen:
                                name: 'svm_thr'

                                StackLayout:
                                    orientation: 'lr-tb'
                                    padding: [30, 0, 30, 0]
                                    spacing: 40

                                    SilenceRemovalOptionTextField:
                                        id: svm_win
                                        text: '1000'
                                        hint_text: 'short-term window size.'
                                        helper_text: 'default: 1000 (ms)'

                                    SilenceRemovalOptionTextField:
                                        id: svm_seek
                                        text: '500'
                                        hint_text: 'short-term window step.'
                                        helper_text: 'default: 500 (ms)'

                                    SilenceRemovalOptionTextField:
                                        id: svm_weight
                                        text: '0.5'
                                        hint_text: 'weight factor(0 < weight < 1). the higher, the more strict.'
                                        helper_text: 'default: 0.5'

                                    SilenceRemovalOptionTextField:
                                        id: svm_broaden
                                        text: '0'
                                        hint_text: 'broaden range of non-silent sections in ms.'
                                        helper_text: 'default: 0'

                                    SilenceRemovalOptionTextField:
                                        id: svm_smooth_window
                                        text: '500'
                                        hint_text: 'smoothing parameter using the SVM probabilistic sequence.'
                                        helper_text: 'default: 500 (ms)'

                                    SilenceRemovalOptionTextField:
                                        id: svm_min_nonsilence
                                        text: '200'
                                        hint_text: 'minimum duration of nonsilence.'
                                        helper_text: 'default: 200 (ms)'


        VSeparator:

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 30

            Button:
                text: '区間プロット'
                on_press: root.plot_button_clicked()

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: '-0.01'
                    on_press: root.change_threshold_button_clicked('-0.01')

                Button:
                    text: '-0.1'
                    on_press: root.change_threshold_button_clicked('-0.1')

                Button:
                    text: '0.5'
                    on_press: root.change_threshold_button_clicked('0.5')

                Button:
                    text: '+0.1'
                    on_press: root.change_threshold_button_clicked('+0.1')

                Button:
                    text: '+0.01'
                    on_press: root.change_threshold_button_clicked('+0.01')

            Button:
                text: '再プロット'
                on_press: root.replot_button_clicked()

            Button:
                text: '区間抽出'
                on_press: root.extract_button_clicked()

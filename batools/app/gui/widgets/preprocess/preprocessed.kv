#:kivy 2.1

<PreprocessCheckbox@MDCheckbox>
    size: dp(48), dp(48)
    size_hint: None, None

<PreprocessOptionTextField@MDTextField>
    font_size: '15sp'
    mode: 'line'
    multiline: False
    text_color_normal: app.theme_cls.text_color
    line_color_normal: app.theme_cls.text_color
    disabled_foreground_color: app.theme_cls.secondary_text_color

<PreprocessedIconButton@MDIconButton>:
    icon_size: '20sp'

<PreprocessedIconSeparator@MDLabel>
    text: '|'
    font_size: '25sp'
    theme_text_color: 'Secondary'

<PreprocessedTab>:
    title: ''
    icon: 'format-list-bulleted'

    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 19

            ScrollView:
                do_scroll_y: False
                height: dp(54)
                size_hint_y: None

                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: dp(5)
                    adaptive_width: True

                    PreprocessedIconButton:
                        icon: 'file-remove-outline'
                        on_press: root.remove_button_clicked(select=True)

                    PreprocessedIconButton:
                        icon: 'delete-forever-outline'
                        on_press: root.remove_button_clicked(select=False)

                    PreprocessedIconSeparator:

                    PreprocessedIconButton:
                        icon: 'sort-ascending'
                        on_press: root.sort_button_clicked(value='duration', button=self)

                    PreprocessedIconButton:
                        icon: 'sort-alphabetical-ascending'
                        on_press: root.sort_button_clicked(value='label', button=self)

                    PreprocessedIconSeparator:

                    PreprocessedIconButton:
                        icon: 'content-save'
                        on_press: root.save_button_clicked(select=True)

                    PreprocessedIconButton:
                        icon: 'content-save-all'
                        on_press: root.save_button_clicked(select=False)


            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                ScrollableTreeView:
                    id: audio_treeview
                    root_options: {'text': 'preprocessed audio data', 'font_size': '15sp'}

        VSeparator:

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_x: 41

            MDStackLayout:
                orientation: 'tb-lr'
                padding: [dp(15), dp(10)]
                size_hint_x: 2

                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True

                    PreprocessCheckbox:
                        id: silence_removal_checkbox
                        disabled: True

                    MDLabel:
                        text: '無音区間除去'

                MDStackLayout:
                    orientation: 'lr-tb'
                    adaptive_height: True
                    padding: [dp(30), 0, 0, 0]

                    Label:
                        text: '[u]無音区間除去タブから区間の設定が必要です[/u]'
                        markup: True
                        size: self.texture_size
                        size_hint: None, None

                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True

                    PreprocessCheckbox:
                        id: resample_checkbox
                        disabled: True
                        on_state:
                            resample_fs.disabled = False if self.state == 'down' else True

                    MDLabel:
                        text: 'リサンプリング'

                MDStackLayout:
                    orientation: 'lr-tb'
                    adaptive_height: True
                    padding: [dp(30), 0, 0, 0]
                    spacing: dp(5)

                    PreprocessOptionTextField:
                        id: resample_fs
                        width: sp(100)
                        size_hint: None, None
                        disabled: True

                    Label:
                        text: '(Hz)'
                        size: self.texture_size[0], resample_fs.height
                        size_hint: None, None

                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True

                    PreprocessCheckbox:
                        id: freqfilter_checkbox
                        disabled: True
                        on_press:
                            freqfilter_fs_min.disabled = False if self.state == 'down' else True
                            freqfilter_fs_max.disabled = False if self.state == 'down' else True

                    MDLabel:
                        text: '周波数フィルタ (Hz)'

                MDStackLayout:
                    orientation: 'lr-tb'
                    adaptive_height: True
                    padding: [dp(30), 0, 0, 0]
                    spacing: dp(5)

                    Label:
                        text: 'min:'
                        size: self.texture_size[0], freqfilter_fs_min.height
                        size_hint: None, None

                    PreprocessOptionTextField:
                        id: freqfilter_fs_min
                        width: sp(100)
                        size_hint: None, None
                        disabled: True

                    Label:
                        text: '〜'
                        size: sp(40), freqfilter_fs_min.height
                        size_hint: None, None

                    Label:
                        text: 'max:'
                        size: self.texture_size[0], freqfilter_fs_min.height
                        size_hint: None, None

                    PreprocessOptionTextField:
                        id: freqfilter_fs_max
                        width: sp(100)
                        size_hint: None, None
                        disabled: True

                    Label:
                        text: '(Hz)'
                        size: self.texture_size[0], freqfilter_fs_min.height
                        size_hint: None, None

            VSeparator:

            Button:
                size_hint_x: 1
                text: 'OK'
                on_press: root.ok_button_clicked()


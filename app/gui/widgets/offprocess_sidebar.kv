<OffprocessSidebar>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 96

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True

                MDIconButton:
                    icon: 'file-remove-outline'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.opposite_text_color
                    user_font_size: '16sp'
                    # on_press: root.remove_button_clicked()

                MDIconButton:
                    icon: 'delete-forever-outline'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.opposite_text_color
                    user_font_size: '16sp'
                    # on_press: root.reset_button_clicked()

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                TreeView:
                    id: target_audio_treeview
                    size_hint_y: 20
                    root_options: {'text': 'target audio data', 'font_size': 25}

        Button:
            size_hint_x: 4
            text: 'â–·'
            font_size: 18
            # on_press: root.select_button_clicked()


<AudioTreeViewLabel>:
    font_size: 25

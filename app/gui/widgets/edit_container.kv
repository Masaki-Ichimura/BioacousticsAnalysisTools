<EditContainerWidget>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebarWidget:
            id: edit_sidebar
            size_hint_x: 24

        Button:
            size_hint_x: 1
            text: 'â–·'
            font_size: 18
            on_press: root.select_button_clicked()

        EditWorkingContainerWidget:
            size_hint_x: 75


<EditWorkingContainerWidget>:
    id: edit_working_container

    BoxLayout:
        orientation: 'vertical'

#:import EditSideBar app.gui.widgets.edit_sidebar.EditSidebar
#:import AudioToolbar app.gui.widgets.audiotimeline.AudioToolbar


<EditContainer>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebar:
            id: sidebar
            size_hint_x: 25

        EditWorkingContainer:
            id: working_container
            size_hint_x: 75

<EditWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        EditAudioDisplay:
            id: audio_display
            size_hint_y: 40

        EditAudioDetail:
            size_hint_y: 60

<EditAudioDisplay>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        AudioToolbar:
            id: audio_toolbar
            size_hint_y: 20

        HSeparator:
            height: dp(2)

        AudioTimeline:
            id: audio_timeline
            size_hint_y: 80

<EditAudioDetail>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        Button:
            text: 'Audio Detail'

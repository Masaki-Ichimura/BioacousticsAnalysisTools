#:import EditSideBarWidget app.gui.widgets.edit_sidebar.EditSidebarWidget


<EditContainerWidget>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebarWidget:
            id: edit_sidebar
            size_hint_x: 25

        EditWorkingContainerWidget:
            id: edit_working_container
            size_hint_x: 75


<EditWorkingContainerWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        EditAudioTimelineWidget:
            id: edit_audio_timeline
            size_hint_y: 40

        EditAudioDisplayWidget:
            size_hint_y: 60

<EditAudioTimelineWidget>:
    BoxLayout:
        id: box
        orientation: 'vertical'
        size: root.size
        pos: root.pos


<EditAudioDisplayWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        Button:
            text: 'Audio Display'

#:import EditSideBarWidget app.gui.widgets.edit_sidebar.EditSidebarWidget
#:import AudioToolbarWidget app.gui.widgets.audiotimeline.AudioToolbarWidget


<EditContainerWidget>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebarWidget:
            id: edit_sidebar
            size_hint_x: 25

        EditWorkingContainerWidget:
            id: edit_working_container
            size_hint_x: 75

<EditWorkingContainerWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        EditAudioDisplayWidget:
            id: edit_audio_display
            size_hint_y: 40

        EditAudioDetailWidget:
            size_hint_y: 60

<EditAudioDisplayWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        AudioToolbarWidget:
            id: edit_audio_toolbar
            size_hint_y: 20

        HSeparator:
            height: dp(2)

        AudioTimelineWidget:
            id: edit_audio_timeline
            size_hint_y: 80

<EditAudioDetailWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        Button:
            text: 'Audio Detail'

<FrogDrawerItem@MDNavigationDrawerItem>
    icon_color: app.theme_cls.text_color
    theme_text_color: 'Custom'
    text_color: app.theme_cls.text_color
    selected_color: app.theme_cls.secondary_text_color

<FrogTab>:
    title: 'カエル'

    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        # MDTopAppBar:
        #     id: appbar
        #     title: 'コーラス解析'
        #     elevation: dp(10)
        #     type_hight: 'small'
            #left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]

        MDNavigationLayout:

            ScreenManager:
                id: screen_manager

                FrogSeparate:
                    id: separate
                    name: 'separate'
                    root_tab: root

                FrogSelect:
                    id: select
                    name: 'select'
                    root_tab: root

                FrogAnalysis:
                    id: analysis
                    name: 'analysis'
                    root_tab: root

            MDNavigationDrawer:
                id: nav_drawer
                type: 'standard'
                pos: root.pos
                width: root.width*.25

                MDNavigationDrawerMenu:

                    FrogDrawerItem:
                        icon: 'call-split'
                        text: '音源分離'
                        on_press:
                            screen_manager.current = 'separate'
                            #nav_drawer.set_state('close')

                    MDNavigationDrawerLabel:
                        text: '▽'
                        padding: [dp(40), dp(5), 0, dp(5)]

                    FrogDrawerItem:
                        icon: 'check-bold'
                        text: 'カエル信号の選択'
                        on_press:
                            screen_manager.current = 'select'
                            #nav_drawer.set_state('close')

                    MDNavigationDrawerLabel:
                        text: '▽'
                        padding: [dp(40), dp(5), 0, dp(5)]

                    FrogDrawerItem:
                        icon: 'poll'
                        text: '同期解析'
                        on_press:
                            screen_manager.current = 'analysis'
                            #nav_drawer.set_state('close')

<FrogSeparate>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        Button:
            size_hint_x: 2
            text: '- 分離手法の選択やその手法におけるオプションを指定'

        Button:
            size_hint_x: 1
            text: 'separate'
            on_press:
                root.separate()
                root.root_tab.ids.screen_manager.current = 'select'


<FrogSelect>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        MDGridLayout:
            id: grid_seps
            size_hint_x: 2
            rows: 3
            cols: 3
            md_bg_color: 1, 1, 1, .8

        Button:
            size_hint_x: 1
            text: 'select'
            on_press:
                root.select()
                root.root_tab.ids.screen_manager.current = 'analysis'

<FrogAnalysis>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Button:
            text: 'analysis'

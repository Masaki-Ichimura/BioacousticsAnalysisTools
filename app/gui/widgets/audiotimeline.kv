<AudioTimeline>:
    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        BoxLayout:
            id: box_yaxis
            size_hint_x: 1
            orientation: 'vertical'

        ScrollView:
            do_scroll_y: False
            size_hint_x: 20

            BoxLayout:
                id: box_tl
                orientation: 'vertical'
                size_hint_x: None
                width: self.minimum_width

<TimelineXgrid>:
    canvas:

<AudioToolbar>:
    MDBoxLayout:
        orientation: 'horizontal'
        size: root.size
        pos: root.pos

        MDIconButton:
            id: play
            icon: 'play'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.opposite_text_color
            user_font_size: '18sp'
            on_press: root.play()

        MDIconButton:
            id: pause
            icon: 'pause'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.opposite_text_color
            user_font_size: '18sp'
            on_press: root.pause()

        MDIconButton:
            id: stop
            icon: 'stop'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.opposite_text_color
            user_font_size: '18sp'
            on_press: root.stop()

        MDIconButton:
            id: magnify_plus
            icon: 'magnify-plus-outline'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.opposite_text_color
            user_font_size: '18sp'
            on_press: root.magnify(mode='plus')

        MDIconButton:
            id: magnify_minus
            icon: 'magnify-minus-outline'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.opposite_text_color
            user_font_size: '18sp'
            on_press: root.magnify(mode='minus')

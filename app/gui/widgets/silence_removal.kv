<SilenceRemovalOptionTextField@MDTextField>
    font_size: '15sp'
    text_color_normal: app.theme_cls.text_color
    disabled_foreground_color: app.theme_cls.secondary_text_color
    helper_text_mode: 'persistent'

<PydubBasedSilenceRemovalTab>:
    title: '無音区間除去(pydub based)'

    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        ScrollView:
            size_hint_x: 35
            do_scroll_x: False
            size_hint_y: None
            height: root.height

            FileTreeView:
                id: treeview
                root_options: {'text': 'splited audio data', 'font_size': 25}

        VSeparator:

        Container:
            id: options
            size_hint_x: 45

            BoxLayout:
                orientation: 'vertical'
                pos: options.pos
                size: options.size
                padding: 30

                MDBoxLayout:
                    id: options_label
                    orientation: 'horizontal'
                    spacing: 10
                    adaptive_height: True

                    MDIcon:
                        icon: 'cog-outline'
                        font_size: '20sp'
                        size_hint_x: None

                    MDLabel:
                        font_style: 'H5'
                        text: 'Settings'

                ScrollView:
                    do_scroll_x: False
                    size_hint_y: 1

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        spacing: 20
                        adaptive_height: True

                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: 10
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'horizontal'
                                padding: 20
                                adaptive_height: True

                                MDLabel:
                                    font_style: 'H6'
                                    text: 'Limit frequency'

                                MDSwitch:
                                    id: limit_freq
                                    on_active:
                                        freq_high.disabled = not self.active
                                        freq_low.disabled = not self.active

                            SilenceRemovalOptionTextField:
                                id: freq_high
                                disabled: True
                                text: '4096'
                                hint_text: 'highest frequency that can be used (Hz).'
                                helper_text: 'default: 4,096 (Hz)'

                            SilenceRemovalOptionTextField:
                                id: freq_low
                                disabled: True
                                text: '1024'
                                hint_text: 'lowest frequency that can be used (Hz).'
                                helper_text: 'default: 1,024 (Hz)'

                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: 10
                            adaptive_height: True

                            MDBoxLayout:
                                padding: 20
                                adaptive_height: True

                                MDLabel:
                                    font_style: 'H6'
                                    text: 'Others'

                            SilenceRemovalOptionTextField:
                                id: min_silence_len
                                text: '1000'
                                hint_text: 'minimum length for silent sections in msec.'
                                helper_text: 'default: 1,000 (ms)'

                            SilenceRemovalOptionTextField:
                                id: silence_thresh
                                text: '-16'
                                hint_text: 'the upper bound for how quiet is silent in dBFS.'
                                helper_text: 'default: -16 (dB)'

                            SilenceRemovalOptionTextField:
                                id: seek_step
                                text: '100'
                                hint_text: '1 Size of the step for checking for silence in msec.'
                                helper_text: 'default: 100 (ms)'

        VSeparator:

        BoxLayout:
            id: buttons
            size_hint_x: 20
            orientation: 'vertical'
            pos: buttons.pos
            size: buttons.size

            Button:
                text: 'OK'
                on_press: root.ok_button_clicked()

            Button:
                text: 'reset'
                on_press: root.reset_button_clicked()

            Button:
                text: 'split(仮)'

            Button:
                text: 'dump(仮)'


#:import expanduser os.path.expanduser


<FilechooserPopup>:
    title: 'choose file'
    size_hint: .9, .9
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        FileChooser:
            id: filechooser
            rootpath: expanduser('~/Documents/github')
            multiselect: True
            FileChooserIconLayout:

        BoxLayout:
            size_hint: 1, 0.1
            # pos_hint: {'center_x': .5, 'center_y': .5}
            # spacing: 20
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection == [] else False

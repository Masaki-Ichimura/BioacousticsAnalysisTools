#:import getcwd os.getcwd


<FilechooserPopup>:
    title: 'choose file'
    size_hint: .9, .9
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        FileChooser:
            id: filechooser
            rootpath: getcwd()
            multiselect: True
            FileChooserIconLayout:

        BoxLayout:
            size_hint: 1, 0.1

            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection == [] else False

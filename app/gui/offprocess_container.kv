<OffprocessContainer>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        OffprocessSidebar:
            id: sidebar
            size_hint_x: 25

        OffprocessWorkingContainer:
            id: working_container
            size_hint_x: 75

<OffprocessWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        MDTabs:
            background_color: (1, 1, 1, .2)
            tab_bar_height: 1.04*root.parent.parent.ids.sidebar.ids.bar.height

            GeneralTab:
                id: general

            FrogTab:
                id: frog

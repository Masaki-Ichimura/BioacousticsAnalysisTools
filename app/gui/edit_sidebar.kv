<SidebarIconButton@MDIconButton>:
    user_font_size: '20sp'


<EditSidebar>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 95

            MDBoxLayout:
                id: choosed_bar
                orientation: 'horizontal'
                padding: 10
                adaptive_height: True

                SidebarIconButton:
                    icon: 'file-plus-outline'
                    on_press: root.choose_button_clicked()

                SidebarIconButton:
                    icon: 'file-remove-outline'
                    on_press: root.remove_button_clicked(mode='choosed')

                SidebarIconButton:
                    icon: 'delete-forever-outline'
                    on_press: root.reset_button_clicked(mode='choosed')

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False
                size_hint_y: None
                height: select.height-choosed_bar.height-5

                ScrollableTreeView:
                    id: choosed_audio_treeview
                    root_options: {'text': 'choosed audio data', 'font_size': '15sp'}

            HSeparator:
                height: dp(2)

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 10
                adaptive_height: True

                SidebarIconButton:
                    icon: 'arrow-down-thick'
                    on_press: root.move_button_clicked()

                SidebarIconButton:
                    icon: 'file-remove-outline'
                    on_press: root.remove_button_clicked(mode='target')

                SidebarIconButton:
                    icon: 'delete-forever-outline'
                    on_press: root.reset_button_clicked(mode='target')

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                ScrollableTreeView:
                    id: target_audio_treeview
                    root_options: {'text': 'target audio data', 'font_size': '15sp'}

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 5

            Button:
                id: select
                size_hint_y: 40
                text: '▷'
                font_size: '15sp'
                on_press: root.select_button_clicked()

            Button:
                id: fetch
                size_hint_y: 60
                text: '◁'
                font_size: '15sp'
                on_press: root.fetch_button_clicked()

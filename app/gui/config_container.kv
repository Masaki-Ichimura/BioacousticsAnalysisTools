<ConfigDrawerItem@MDNavigationDrawerItem>
    icon_color: app.theme_cls.text_color
    theme_text_color: 'Custom'
    text_color: app.theme_cls.text_color
    selected_color: app.theme_cls.secondary_text_color

<ConfigTextField@MDTextField>
    font_size: '15sp'
    helper_text_mode: 'persistent'

<ConfigContainer>:
    MDNavigationLayout:
        size: root.size
        pos: root.pos

        ScreenManager:
            id: screen_manager

            MDScreen:
                name: 'spec'

                BoxLayout:
                    orientation: 'vertical'

                    Button:
                        text: 'Test1'

            MDScreen:
                name: 'stft'

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 20

                    ConfigTextField:
                        id: n_fft
                        text: '1024'
                        hint_text: 'STFT window length.'
                        helper_text: 'default: '

                    ConfigTextField:
                        id: hop_length
                        text: '256'
                        hint_text: 'STFT hop length.'
                        helper_text: 'default: '

                    ConfigTextField:
                        id: window
                        text: 'hann'
                        hint_text: 'STFT window function'
                        helper_text: 'defaut: (dummy)'

                    Button:
                        on_press: print(root.get_stft_args())

        MDNavigationDrawer:
            id: nav_drawer
            type: 'standard'
            pos: root.pos
            width: root.width*.25

            MDNavigationDrawerMenu:

                ConfigDrawerItem:
                    icon: 'cog-outline'
                    text: 'スペクトログラム'
                    on_press:
                        screen_manager.current = 'spec'

                ConfigDrawerItem:
                    icon: 'cog-outline'
                    text: 'STFT'
                    on_press:
                        screen_manager.current = 'stft'

<EditContainer>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebar:
            id: sidebar
            size_hint_x: 25

        EditWorkingContainer:
            id: working_container
            size_hint_x: 75

<EditWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        EditAudioDisplay:
            id: audio_display
            size_hint_y: 40

        EditAudioDetail:
            id: audio_detail
            size_hint_y: 60

<EditAudioDisplay>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        AudioToolbar:
            id: audio_toolbar
            size_hint_y: None

        HSeparator:
            rgba: 0.5, 0.5, 0.5, 1

        AudioTimeline:
            id: audio_timeline

        HSeparator:
            height: dp(2)

<EditAudioDetail>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        MDTabs:
            tab_bar_height: 110+4

            RemovingSilenceTab:

            Tab:
                title: 'Tab 2'

                Button:
                    text: 'Test space'

<RemovingSilenceOptionTextField@MDTextField>
    font_size: '15sp'
    helper_text_mode: 'persistent'

<RemovingSilenceTab>:
    title: '無音区間除去'

    BoxLayout:
        orientation: 'horizontal'
        pos: root.pos
        size: root.size

        ScrollView:
            size_hint_x: 35
            do_scroll_x: False
            size_hint_y: None
            height: root.height

            FileTreeView:
                id: treeview
                root_options: {'text': 'splited audio data', 'font_size': 25}

        VSeparator:

        Container:
            id: options
            size_hint_x: 45

            BoxLayout:
                orientation: 'vertical'
                pos: options.pos
                size: options.size
                padding: 30

                MDBoxLayout:
                    id: options_label
                    orientation: 'horizontal'
                    spacing: 20
                    adaptive_height: True

                    MDIcon:
                        icon: 'cog-outline'
                        font_size: '20sp'
                        size_hint_x: None

                    MDLabel:
                        font_style: 'H6'
                        text: 'Settings'

                ScrollView:
                    do_scroll_x: False

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        spacing: 20

                        RemovingSilenceOptionTextField:
                            id: freq_high
                            text: '4096'
                            hint_text: 'Highest frequency that can be used (Hz).'
                            helper_text: 'default: 4,096 (Hz)'

                        RemovingSilenceOptionTextField:
                            id: freq_low
                            text: '512'
                            hint_text: 'Lowest frequency that can be used (Hz).'
                            helper_text: 'default: 512 (Hz)'

                        RemovingSilenceOptionTextField:
                            id: min_silence_len
                            text: '1000'
                            hint_text: 'Minimum length for silent sections in msec.'
                            helper_text: 'default: 1,000 (ms)'

                        RemovingSilenceOptionTextField:
                            id: silence_thresh
                            text: '-16'
                            hint_text: 'The upper bound for how quiet is silent in dBFS.'
                            helper_text: 'default: -16 (dB)'

                        RemovingSilenceOptionTextField:
                            id: seek_step
                            text: '100'
                            hint_text: '1 Size of the step for checking for silence in msec.'
                            helper_text: 'default: 100 (ms)'

        VSeparator:

        BoxLayout:
            id: buttons
            size_hint_x: 20
            orientation: 'vertical'
            pos: buttons.pos
            size: buttons.size

            Button:
                text: 'OK'
                on_press: root.ok_button_clicked()

            Button:
                text: 'reset'
                on_press: root.reset_button_clicked()

            Button:
                text: 'split(仮)'

            Button:
                text: 'dump(仮)'

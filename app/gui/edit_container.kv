<PreprocessedIconButton@MDIconButton>:
    user_font_size: '20sp'

<EditContainer>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        EditSidebar:
            id: sidebar
            size_hint_x: 25

        EditWorkingContainer:
            id: working_container
            size_hint_x: 75

<EditWorkingContainer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        EditAudioDisplay:
            id: audio_display
            size_hint_y: 40

        EditAudioDetail:
            id: audio_detail
            size_hint_y: 60

<EditAudioDisplay>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        AudioToolbar:
            id: audio_toolbar
            size_hint_y: None

        HSeparator:
            rgba: 0.5, 0.5, 0.5, 1

        AudioTimeline:
            id: audio_timeline

        HSeparator:
            height: dp(2)

<EditAudioDetail>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size
        pos: root.pos

        BoxLayout:
            orientation: 'vertical'
            # (25/75)*(95/100)
            size_hint_x: 19/60

            MDBoxLayout:
                id: choosed_bar
                orientation: 'horizontal'
                padding: 10
                adaptive_height: True

                PreprocessedIconButton:
                    icon: 'circle-outline'

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                FileTreeView:
                    id: audio_treeview
                    root_options: {'text': 'preprocessed audio data', 'font_size': '15sp'}

        VSeparator:

        MDTabs:
            tab_bar_height: 1.04*root.parent.parent.parent.parent.ids.sidebar.ids.choosed_bar.height
            background_color: (1, 1, 1, .2)
            size_hint_x: 41/60

            PreprocessedTab:
                id: preprocessed
            SilenceRemovalTab:
                id: silence_removal

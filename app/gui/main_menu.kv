<MainMenu>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        TabbedPanel:
            do_default_tab: False
            tab_width: dp(200)
            background_color: (1, 1, 1, .5)

            TabbedPanelItem:
                id: edit
                text: '取り込み/編集'
                EditContainer:
                    id: edit_container

            TabbedPanelItem:
                id: offprocess
                text: 'オフライン信号処理'
                OffprocessContainer:
                    id: offprocess_container

            TabbedPanelItem:
                id: config
                text: '設定'
                ConfigContainer:
                    id: config_container

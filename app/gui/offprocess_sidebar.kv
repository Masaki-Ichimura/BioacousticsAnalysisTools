<OffprocessSidebar>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 95

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True

                MDIconButton:
                    icon: 'file-remove-outline'
                    user_font_size: '16sp'
                    # on_press: root.remove_button_clicked()

                MDIconButton:
                    icon: 'delete-forever-outline'
                    user_font_size: '16sp'
                    # on_press: root.reset_button_clicked()

            HSeparator:
                rgba: 0.5, 0.5, 0.5, 1

            ScrollView:
                do_scroll_x: False

                FileTreeView:
                    id: target_audio_treeview
                    root_options: {'text': 'target audio data', 'font_size': '15sp'}

